<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background13"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:fontFamily="cursive"
        android:text="ADD LIST"
        android:textStyle="bold"
        android:textSize="40sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/studybtn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/ic_brightness_1_black_24dp"
            android:layout_marginLeft="20dp"

            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="casual"
            android:text="STUDY"

            android:textSize="20sp"
            android:onClick="btnMain"/>

        <Button
            android:id="@+id/foodbtn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/ic_brightness_1_black_24dp"

            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="casual"
            android:text="FOOD"
            android:textSize="20sp"
            android:onClick="btnMain"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/exercisebtn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/ic_brightness_1_black_24dp"

            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="casual"
            android:text="EXERCISE"
            android:textSize="20sp"
            android:onClick="btnMain"/>

        <Button
            android:id="@+id/bookbtn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/ic_brightness_1_black_24dp"

            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="casual"
            android:text="BOOK"
            android:textSize="20sp"
            android:onClick="btnMain"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/breakbtn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/ic_brightness_1_black_24dp"

            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="casual"
            android:text="BREAKTIME"
            android:textSize="20sp"
            android:onClick="btnMain"/>

        <Button
            android:id="@+id/otherbtn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/ic_brightness_1_black_24dp"

            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="casual"
            android:text="other"
            android:textSize="20sp"
            android:onClick="btnMain"/>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/memo"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="top|center"
            android:padding="50dp"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:scrollbars="vertical"
            android:background="@drawable/memo" />


        <Button
            android:id="@+id/startbtn"
            android:layout_width="76dp"
            android:layout_height="49dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="55dp"
            android:layout_weight="1"
            android:background="#A1FFC107"
            android:fontFamily="cursive"
            android:gravity="center"
            android:onClick="btnMain"
            android:text="START"
            android:textSize="20sp" />

    </FrameLayout>




</LinearLayout>
