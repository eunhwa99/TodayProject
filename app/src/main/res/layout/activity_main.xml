<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res-auto"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android1:layout_height="match_parent"
    android1:layout_width="match_parent"
    android1:orientation="horizontal"
    android1:background="@drawable/mainbackground"
    tools:ignore="NamespaceTypo">

    <TextView
        android1:id="@+id/tv"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_marginTop="50dp"
        android1:layout_weight="1"
        android1:clickable="true"
        android1:fontFamily="casual"
        android1:gravity="center"
        android1:onClick="goadd"
        android1:text="ADDLIST"
        android1:textColor="#FF9800"
        android1:textSize="40sp"
        android1:textStyle="bold" />

    <TextView
        android1:id="@+id/memotv"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_marginTop="50dp"
        android1:layout_weight="1"

        android1:clickable="true"
        android1:fontFamily="casual"
        android1:onClick="goadd"
        android1:text="MEMO"
        android1:textColor="#D2FF5722"
        android1:textSize="40sp"
        android1:textStyle="bold" />


</LinearLayout>